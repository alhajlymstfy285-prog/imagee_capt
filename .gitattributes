# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Images
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# PyTorch models
*.pt binary
*.pth binary
*.ckpt binary
